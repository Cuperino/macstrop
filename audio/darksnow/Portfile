depends_build-append \
                    port:pkgconfig \
                    port:automake \
                    port:autoconf
platform linux {
    depends_build-append \
                    port:gettext-dev
}

platform darwin {
    depends_lib-append \
                    port:gtk2
}

post-extract {
    # maintainer convenience: force a once-only autoreconf
    file delete -force ${worksrcpath}/configure
    file rename ${worksrcpath}/configure.in ${worksrcpath}/configure.ac
}
if {![file exists ${worksrcpath}/configure]} {
    platform linux {
        configure.env-append \
                    "ACLOCAL_FLAGS=-I /usr/share/aclocal"
    }
    configure.cmd ./autogen.sh
}

patchfiles-append   patch-modernise-buildsystem.diff \
                    patch-pulseaudio-source.diff

configure.ldflags-append \
                    ${configure.optflags} -lintl

post-destroot {
#     file rename ${destroot}${prefix}/etc/darkice.cfg ${destroot}${prefix}/etc/darkice.cfg.sample
}

